<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivanmagda.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.LibraryActivity"
            android:label="@string/library_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SearchActivity"
            android:label="@string/search_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />
        <activity
            android:name=".ui.activity.PlaylistsActivity"
            android:label="@string/playlists_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />
        <activity
            android:name=".ui.activity.ArtistsActivity"
            android:label="@string/artists_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />
        <activity
            android:name=".ui.activity.AlbumsActivity"
            android:label="@string/albums_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />
        <activity
            android:name=".ui.activity.SongsActivity"
            android:label="@string/songs_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />
        <activity
            android:name=".ui.activity.NowPlayingActivity"
            android:label="@string/now_playing_activity_title"
            android:parentActivityName=".ui.activity.LibraryActivity" />

        <activity
            android:name=".ui.activity.detail.PlaylistDetailActivity"
            android:label="@string/playlist_detail_activity_title"
            android:parentActivityName=".ui.activity.PlaylistsActivity" />
        <activity
            android:name=".ui.activity.detail.ArtistDetailActivity"
            android:label="@string/artist_detail_activity_title"
            android:parentActivityName=".ui.activity.ArtistsActivity" />
        <activity
            android:name=".ui.activity.detail.AlbumDetailActivity"
            android:label="@string/album_detail_activity_title"
            android:parentActivityName=".ui.activity.AlbumsActivity" />
    </application>

</manifest>