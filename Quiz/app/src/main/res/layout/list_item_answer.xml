<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/answer_list_image_view"
        android:layout_width="@dimen/answer_list_image_view_width"
        android:layout_height="@dimen/answer_list_image_view_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/answer_list_image_view_margin_bottom"
        android:layout_marginLeft="@dimen/answer_list_image_view_margin_start"
        android:layout_marginStart="@dimen/answer_list_image_view_margin_start"
        android:layout_marginTop="@dimen/answer_list_image_view_margin_top"
        android:scaleType="centerInside"
        android:src="@drawable/checked" />

    <TextView
        android:id="@+id/answer_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/answer_list_title_horizontal_space"
        android:layout_marginRight="@dimen/answer_list_title_horizontal_space"
        android:layout_toEndOf="@+id/answer_list_image_view"
        android:layout_toRightOf="@+id/answer_list_image_view"
        android:text="Title"
        android:textSize="18sp" />

</RelativeLayout>